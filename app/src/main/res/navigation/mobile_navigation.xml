<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ducnn17.movieCGV.ui.movie.MovieFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_favourite"
        android:name="com.ducnn17.movieCGV.ui.favorite.FavouriteFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_favourite" />
    <fragment
        android:id="@+id/details_movies"
        android:name="com.ducnn17.movieCGV.ui.movie.moviedetails.DetailMoviesFragment"
        android:label="@string/title_movies"
        tools:layout="@layout/fragment_detail_movies" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.ducnn17.movieCGV.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.ducnn17.movieCGV.SettingFragment"
        android:label="Setting"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/navigation_about"
        android:name="com.ducnn17.movieCGV.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />

</navigation>